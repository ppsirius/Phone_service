<div class="col-sm-4">
  <h2>Phone model</h2>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Phone model</label>
    <div  class="field_border"><%= @repair.phone_model.name %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Imei</label>
    <div  class="field_border"><%= @repair.imei %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Status</label>
    <div  class="field_border"><%= @repair.status %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Serviceman</label>
    <div  class="field_border"><%= @repair.serviceman_id %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Tags</label>
    <div  class="field_border"><%= @repair.tag_list %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Created at</label>
    <div  class="field_border"><%= simple_date(@repair.created_at) %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Deadline</label>
    <div  class="field_border"><%= simple_date(@repair.deadline) %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Description</label>
    <div  class="field_border"><%= @repair.description %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Description for service</label>
    <div  class="field_border"><%= @repair.description_service %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Description for client</label>
    <div  class="field_border"><%= @repair.description_client %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Max price</label>
    <div  class="field_border"><%= @repair.max_price %></div>
  </div>

  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Costs</label>
    <div  class="field_border"><%= @repair.costs %></div>
  </div>

  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Price</label>
    <div  class="field_border"><%= @repair.price %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Relased</label>
    <div  class="field_border"><%= @repair.relased %></div>
  </div>


</div>

<div class="col-sm-4 col-md-offset-1">
  <h2>Client</h2>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Full name</label>
    <div  class="field_border"><%= @repair.client.full_name %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Phone number</label>
    <div  class="field_border"><%= @repair.client.phone_number %></div>
  </div>
  <div class="form-group string required phone_model_name">
    <label class="string required control-label">Email</label>
    <div  class="field_border"><%= @repair.client.email %></div>
</div>
